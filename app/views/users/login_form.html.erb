<div class="login-wrapper">
 <div class="login-container">
  <h1>ログイン</h1>
  <div class="form login-form">
   <div class="form-body">
     <div class="form-error">
      <%= @error_message %> 
     </div>

    <%= form_tag("/login") do %>
      
      <p>メールアドレス</p>
      <input name="email" value="<%= @email %>">
      <p>パスワード</p>
      <input type="password" name="password" value="<%= @password %>">
      <input type="submit" value="ログイン">
    <% end %>

   </div>
  </div>
 </div>
</div>
